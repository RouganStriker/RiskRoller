<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:background="@drawable/risk_bg">
    
    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:paddingBottom="30dp"
        android:text="Casualties"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="30sp"></TextView>
    
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView 
            android:id="@+id/attacker_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:text="0"
            android:textSize="80dp"
            android:textColor="#EE0000"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/defender_death"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="80dp"
            android:layout_marginRight="40dp"
            android:textColor="#0077FF"/>
    </RelativeLayout>
    
	<LinearLayout
	    android:layout_width="fill_parent"
    	android:layout_height="fill_parent"
    	android:orientation="vertical"
    	android:gravity="bottom">
    	
	    <LinearLayout
	        
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
			android:paddingBottom="5dp">
			
			<EditText
			    android:id="@+id/numAttackers"
			    android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.4"
			    android:hint="Attackers"
				android:inputType="phone">
			</EditText>
			
			<EditText
			    android:id="@+id/numDefenders"
			    android:layout_width="1dp"
			    android:layout_weight="0.4"
			    android:layout_height="wrap_content"
			    android:layout_toLeftOf="@id/numAttackers"
			    android:hint="Defenders"
			    android:inputType="phone"
	>   
			 </EditText>
		</LinearLayout>
		
		<LinearLayout
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
		    android:paddingTop="5dp"
			android:gravity="center_horizontal">
		
		   <Button
			    android:id="@+id/roll_one"
			    android:padding="5dp"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Roll One"
			    android:layout_weight="0.3"
			    android:textSize="19sp"
			    ></Button>
		    <Button
			    android:id="@+id/roll_three"
			    android:layout_width="wrap_content"
			     android:padding="5dp"
			    android:layout_height="wrap_content"
			    android:layout_toLeftOf="@id/roll_one"
			    android:text="Roll Three"
			    android:layout_weight="0.4"
			    android:textSize="19sp"
			    ></Button>
			<Button
			    android:id="@+id/roll_all"
			    android:padding="5dp"
			    android:layout_toLeftOf="@id/roll_three"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:text="Roll All"
			    android:layout_weight="0.3"
			    android:textSize="19sp"
			    ></Button>
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="horizontal"
			android:paddingTop="40dp"
			android:paddingBottom="5dp"
			android:gravity="center_horizontal">
			
		    <Button
			    android:id="@+id/clear_all"
			    android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:text="Clear All"
			    android:layout_weight="1"
			    android:textSize="17sp"
			></Button>
			<Button android:id="@+id/show_log"
			    android:layout_width="1dp"
			    android:layout_height="wrap_content"
			    android:text="Show Log"
			    android:layout_weight="1"
			    android:textSize="17sp"></Button>
		</LinearLayout>
	</LinearLayout>
</LinearLayout>